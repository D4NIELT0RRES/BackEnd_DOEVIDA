# ================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ================================
DATABASE_URL="mysql://usuario:senha@localhost:3306/db_doevida_tcc"

# ================================
# CONFIGURAÇÕES JWT
# ================================
JWT_SECRET="sua_chave_super_secreta_aqui"
JWT_EXPIRES="24h"

# ================================
# CONFIGURAÇÕES DE EMAIL
# ================================
# IMPORTANTE: Use a conta do PROVEDOR que você quer ENVIAR os emails
# O sistema detecta automaticamente o provedor do DESTINATÁRIO

# Para GMAIL (recomendado):
# 1. Ativar a verificação em duas etapas
# 2. Gerar uma "senha de app" específica para este projeto
# 3. Usar a senha de app (não sua senha normal do Gmail)
EMAIL_USER="seuemail@gmail.com"
EMAIL_PASS="sua_senha_de_app_do_gmail"

# Para HOTMAIL/OUTLOOK:
# 1. Ativar verificação em duas etapas
# 2. Gerar senha de app nas configurações de segurança
# EMAIL_USER="seuemail@hotmail.com"
# EMAIL_PASS="sua_senha_de_app_do_hotmail"

# Para YAHOO:
# 1. Ativar verificação em duas etapas
# 2. Gerar senha de app específica
# EMAIL_USER="seuemail@yahoo.com"
# EMAIL_PASS="sua_senha_de_app_do_yahoo"

# ================================
# CONFIGURAÇÕES DO SERVIDOR
# ================================
PORT=8080
NODE_ENV="development"

# ================================
# CONFIGURAÇÕES DE RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CONFIGURAÇÕES DE UPLOAD
# ================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# ================================
# CORS - ORIGENS PERMITIDAS
# ================================
# Separadas por vírgula (sem espaços)
CORS_ORIGIN="http://localhost:3000,http://localhost:5173,https://seu-frontend.com"