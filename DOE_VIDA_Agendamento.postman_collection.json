{
	"info": {
		"_postman_id": "doe-vida-agendamento",
		"name": "DOE VIDA - Agendamento API",
		"description": "Collection para testar as funcionalidades de agendamento da API DOE VIDA",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Login - Obter Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('token', response.token);",
							"    pm.environment.set('userId', response.usuario.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"usuario@teste.com\",\n  \"senha\": \"123456\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/login",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "login"]
				}
			}
		},
		{
			"name": "2. Listar Hospitais",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.hospitais && response.hospitais.length > 0) {",
							"        pm.environment.set('hospitalId', response.hospitais[0].id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/hospital",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "hospital"]
				}
			}
		},
		{
			"name": "3. Dias Disponíveis",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/hospital/{{hospitalId}}/dias-disponiveis?mes=2025-10&slot=60",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "hospital", "{{hospitalId}}", "dias-disponiveis"],
					"query": [
						{
							"key": "mes",
							"value": "2025-10"
						},
						{
							"key": "slot",
							"value": "60"
						}
					]
				}
			}
		},
		{
			"name": "4. Horários do Dia",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/hospital/{{hospitalId}}/horarios?data=2025-10-15&slot=60&todos=1",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "hospital", "{{hospitalId}}", "horarios"],
					"query": [
						{
							"key": "data",
							"value": "2025-10-15"
						},
						{
							"key": "slot",
							"value": "60"
						},
						{
							"key": "todos",
							"value": "1"
						}
					]
				}
			}
		},
		{
			"name": "5. Criar Agendamento",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('agendamentoId', response.agendamento.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id_hospital\": {{hospitalId}},\n  \"data\": \"2025-10-15\",\n  \"hora\": \"09:00:00\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/agendamento",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "agendamento"]
				}
			}
		},
		{
			"name": "6. Meus Agendamentos",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/agendamento/me?futuros=1",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "agendamento", "me"],
					"query": [
						{
							"key": "futuros",
							"value": "1"
						}
					]
				}
			}
		},
		{
			"name": "7. Cancelar Agendamento",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/agendamento/{{agendamentoId}}",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "agendamento", "{{agendamentoId}}"]
				}
			}
		},
		{
			"name": "TESTE: Agendamento Data Passada (400)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id_hospital\": {{hospitalId}},\n  \"data\": \"2025-10-08\",\n  \"hora\": \"09:00:00\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/agendamento",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "agendamento"]
				}
			}
		},
		{
			"name": "TESTE: Agendamento Sem Token (401)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id_hospital\": {{hospitalId}},\n  \"data\": \"2025-10-15\",\n  \"hora\": \"09:00:00\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/agendamento",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "agendamento"]
				}
			}
		},
		{
			"name": "TESTE: Horário Fora Funcionamento (400)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id_hospital\": {{hospitalId}},\n  \"data\": \"2025-10-15\",\n  \"hora\": \"22:00:00\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/doevida/agendamento",
					"host": ["{{baseUrl}}"],
					"path": ["v1", "doevida", "agendamento"]
				}
			}
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}